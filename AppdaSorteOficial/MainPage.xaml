<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppdaSorteOficial.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="MainPage"
    BackgroundColor="Green">
    <!--  O ScrollView aparece a barra de Rolagem  -->
    <ScrollView>
        <VerticalStackLayout
            BackgroundColor="Grey"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand">
            <!--  Para centralizar todo conteudo , pemos que modificar no VerticalStackLayout  -->
            <!--  Coloca um elemento abaixo do outro  -->
            <Image
                HeightRequest="115"
                Source="logo_green.png"
                WidthRequest="74" />
            <Label
                Margin="0,20,0,120"
                HorizontalOptions="Center"
                IsVisible="False"
                Text="Número da Sorte"
                TextColor="#00AB37"
                VerticalOptions="Center" />
            <Label Margin="0,0,20,0" Text="O número da sorte é: " />
            <HorizontalStackLayout
                Margin="0,70"
                HorizontalOptions="Center"
                Spacing="10">

                <!--  Bordas dos números  -->
                <Border
                    Padding="10,5"
                    Stroke="#00AB37"
                    StrokeShape="RoundRectangle 8">
                    <Label
                        FontSize="24"
                        Text="01"
                        TextColor="#00AB37" />
                </Border>


                <Border
                    Padding="10,5"
                    Stroke="#00AB37"
                    StrokeShape="RoundRectangle 8">
                    <Label
                        FontSize="24"
                        Text="01"
                        TextColor="#00AB37" />
                </Border>

                <Border
                    Padding="10,5"
                    Stroke="#00AB37"
                    StrokeShape="RoundRectangle 8">
                    <Label
                        FontSize="24"
                        Text="01"
                        TextColor="#00AB37" />
                </Border>

                <Border
                    Padding="10,5"
                    Stroke="#00AB37"
                    StrokeShape="RoundRectangle 8">
                    <Label
                        FontSize="24"
                        Text="01"
                        TextColor="#00AB37" />
                </Border>

                <Border
                    Padding="10,5"
                    Stroke="#00AB37"
                    StrokeShape="RoundRectangle 8">
                    <Label
                        FontSize="24"
                        Text="01"
                        TextColor="#00AB37" />
                </Border>
                <Border
                    Padding="10,5"
                    Stroke="#00AB37"
                    StrokeShape="RoundRectangle 8">
                    <Label
                        FontSize="24"
                        Text="01"
                        TextColor="#00AB37" />
                </Border>

            </HorizontalStackLayout>

            <Label HorizontalOptions="Center" Text="Boa Sorte!" />
            <Button
                Margin="0,0,0,50"
                HorizontalOptions="Center"
                Text="Gerar número da Sorte" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
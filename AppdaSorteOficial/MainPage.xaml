<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppdaSorteOficial.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="MainPage"
    BackgroundColor="Green">
    <VerticalStackLayout
        BackgroundColor="Grey"
        HorizontalOptions="CenterAndExpand"
        VerticalOptions="CenterAndExpand">
        <!--  Para centralizar todo conteudo , pemos que modificar no VerticalStackLayout  -->
        <!--  Coloca um elemento abaixo do outro  -->
        <Image
            HeightRequest="115"
            Source="logo_green.png"
            WidthRequest="74" />
        <Label
            Margin="0,20,0,120"
            HorizontalOptions="Center"
            IsVisible="False"
            Text="Número da Sorte"
            TextColor="#00AB37"
            VerticalOptions="Center" />
        <Label Margin="0,0,20,0" Text="O número da sorte é: " />
        <Label Text="01" />
        <Label Text="02" />
        <Label Text="03" />
        <Label Text="04" />
        <Label Text="05" />
        <Label Text="06" />
        <Label HorizontalOptions="Center" Text="Boa Sorte!" />
        <Button
            Margin="0,0,0,50"
            HorizontalOptions="Center"
            Text="Gerar número da Sorte" />
    </VerticalStackLayout>
</ContentPage>
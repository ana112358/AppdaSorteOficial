<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppdaSorteOficial.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="MainPage"
    BackgroundColor="Green">
    <VerticalStackLayout BackgroundColor="Grey">
        <!--  Coloca um elemento abaixo do outro  -->
        <Image
            Margin="0,50,0,0"
            HeightRequest="115"
            Source="logo_green.png"
            WidthRequest="74" />
        <Label
            Margin="0,20,0,120"
            HorizontalOptions="Center"
            Text="Número da Sorte"
            TextColor="#00AB37"
            VerticalOptions="Center" />
        <Button HorizontalOptions="Center" Text="Gerar número da Sorte" />
    </VerticalStackLayout>
</ContentPage>